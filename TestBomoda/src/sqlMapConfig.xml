<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "mybatis-3-config.dtd">

<configuration>
    <!-- - - - - - - 懒加载和缓存 - - - - - - - - - - -->
    <settings>
        <setting name="cacheEnabled" value="true"/>
        <setting name="lazyLoadingEnabled" value="true"/>
        <setting name="aggressiveLazyLoading" value="false"/>
    </settings>
    <!-- - - - - - - - 物理分页拦截器 - - - - - - - -->
    <plugins>
        <plugin interceptor="ibator.dialect.tool.ResultSetInterceptor"/>
        <plugin interceptor="ibator.dialect.tool.StatementInterceptor">
            <property name="dialect" value="ibator.dialect.MySQLDialect"/>
        </plugin>
    </plugins>
    <!-- - - - - - - 数据库环境配置- - - - - - - - - -->
    <environments default="environments">
        <environment id="bomoda">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="com.mysql.jdbc.Driver"/>
                <property name="url" value="jdbc:mysql://127.0.0.1:3306/bomoda?useUnicode=true&amp;characterEncoding=UTF-8"/>
                <property name="username" value="root"/>
                <property name="password" value="manager"/>
            </dataSource>
        </environment>
    </environments>
    <!-- - - - - - - -映射文件路径- - - - - - -->
    <mappers>
        <mapper resource="com/pay/domain/sql/BizMapper.xml"/>
        <mapper resource="com/pay/domain/sql/ClickMapper.xml"/>
        <mapper resource="com/pay/domain/sql/PageMapper.xml"/>
    </mappers>
</configuration>
